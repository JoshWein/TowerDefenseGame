{
    "compilerOptions": {
        "outDir": "./build",
        "target": "es6",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "./typedefs/**/*",
        "./src/**/*"
    ]
}
